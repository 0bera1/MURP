{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/renderer/**/*", "src/components/**/*", "src/hooks/**/*", "src/models/**/*", "src/managers/**/*"],
  "exclude": ["node_modules", "dist", "src/main.ts", "src/core/**/*", "src/services/**/*", "src/repositories/**/*", "src/database/**/*", "src/config/**/*"]
}

