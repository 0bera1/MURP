{
  "name": "manage-ur-plan",
  "version": "1.0.0",
  "description": "Manage UR Plan - Electron Desktop Application",
  "main": "dist/main.js",
  "scripts": {
    "build": "npm run create:icon && tsc && tsc -p tsconfig.renderer.json && npm run copy:html && npm run copy:icon && npm run fix:appsettings",
    "copy:html": "node scripts/copy-html.js",
    "copy:icon": "node scripts/copy-icon.js",
    "create:icon": "node scripts/create-icon.js",
    "fix:appsettings": "node scripts/fix-appsettings.js",
    "postinstall": "electron-rebuild -f -w better-sqlite3",
    "db:path": "node scripts/show-db-path.js",
    "start": "npm run build && electron .",
    "dev": "npm run build && electron .",
    "watch": "tsc --watch",
    "dist": "npm run build && electron-builder --win",
    "dist:win": "npm run build && electron-builder --win"
  },
  "keywords": [
    "electron",
    "desktop",
    "application"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^11.6.0",
    "electron-updater": "^6.6.2",
    "ogl": "^1.0.11",
    "postprocessing": "^6.38.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "three": "^0.167.1"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/three": "^0.182.0",
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "electron-icon-maker": "^0.0.5",
    "sharp": "^0.34.5",
    "typescript": "^5.3.0"
  },
  "build": {
    "appId": "com.manageurplan.app",
    "productName": "Manage UR Plan",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "icon": "murpIco.png",
      "forceCodeSigning": false,
      "verifyUpdateCodeSignature": false,
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "icon": "src/murpicon.svg",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "src/murpicon.svg",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
